class Solution {
    public int towerOfHanoi(int n, int from, int to, int aux) {
        // code here
        return (int)Math.pow(2,n)-1;
    }
}




class Solution {
    public int helper(int n , int from , int to,int aux){
        if(n==1)return 1;
        
        int ans=0;
        ans+=helper(n-1,from,aux,to);
        ans++;
        ans+=helper(n-1,aux,to,from);
        
        return ans;
    }
    public int towerOfHanoi(int n, int from, int to, int aux) {
        // code here
        return helper(n,from,to,aux);
    }
}
