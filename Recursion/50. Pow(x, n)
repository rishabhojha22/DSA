class Solution {
    public double helper(double x,int n){
        if(n==0)return 1;
        if(x==0)return 0;

        if(n%2==0){
            return helper(x*x,n/2);
        }
        else{
            return x* helper(x*x,n/2);
        }
    }
    public double myPow(double x, int n) {
        if(n>=0){
            return helper(x,n);
        }
        else{
            return helper(1/x,Math.abs(n));
        }
    }
}
